<%- include('partials/header'); -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <!--Stores the read data into postTitle-->
    <input type="text" class="form-control" name="postTitle">
    <label>Post</label>
    <textarea name="postBody" class="form-control" rows="8" cols="80"></textarea>
  </div>
  <!--button is outside the div so to remove joining with above div components-->
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

